<UserControl x:Class="GigaNigaGame.Cards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GigaNigaGame"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="10">
    <Border
    Background="White"
    CornerRadius="15"
    Padding="5" 
    BorderBrush="#DDD"
    BorderThickness="0.1">
    <Grid Background="White" x:Name="BColor">
        <Image x:Name="CardImage" Stretch="Fill" Opacity="1"/>
            <Button x:Name="Button" Tag="0"  Content="5" Click="Cover_Click" FontSize="25" Margin="7.5" Background="Transparent" VerticalContentAlignment="Top" Foreground="DarkKhaki"/>
            <TextBlock x:Name="TAG" Text="IDK" Visibility="Collapsed"/>
            <Button x:Name ="Cover" Style="{StaticResource RoundedButton}" Background="Green" Visibility="Collapsed"/>
    </Grid>
    </Border>
</UserControl>
