<UserControl x:Class="GigaNigaGame.Cards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GigaNigaGame"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="10">
    <Grid Background="White" x:Name="BColor">
        <Image x:Name="CardImage" Stretch="Fill" Opacity="1"/>
        <Button x:Name="Button" Content="5" Click="Cover_Click" FontSize="27.5" Margin="7.5" Background="Transparent" Foreground="Gold"/>
        <Button x:Name ="Cover" Background="Green" Opacity="1"/>
        
    </Grid>
</UserControl>
